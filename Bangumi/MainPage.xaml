<Page
    x:Class="Bangumi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bangumi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    xmlns:helper="using:Bangumi.Helper"
    RequestedTheme="{x:Bind helper:SettingHelper.MyTheme}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid>
        <muxc:NavigationView x:Name="NavView"
                             Loaded="NavView_Loaded"
                             ItemInvoked="NavView_ItemInvoked"
                             BackRequested="NavView_BackRequested"
                             IsBackButtonVisible="Collapsed"
                             CompactModeThresholdWidth="600"
                             OpenPaneLength="200">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Tag="home" 
                                         Icon="Home" 
                                         Content="进度"/>
                <muxc:NavigationViewItem Tag="collection" 
                                         Content="收藏">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE734;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="timeLine" 
                                         Content="时间表">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE8C0;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="index" 
                                         Content="索引"
                                         Visibility="Collapsed">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xF0E2;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
                <muxc:NavigationViewItem Tag="search" 
                                         Content="搜索">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xE721;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>
            <muxc:NavigationView.PaneFooter>
                <muxc:NavigationViewItem Name="UserItem" 
                                         Tag="user" 
                                         Content="登录" 
                                         Tapped="NavigationViewItem_Tapped">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Name="UserIcon" 
                                  FontFamily="Segoe MDL2 Assets" 
                                  Glyph="&#xEE57;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.PaneFooter>

            <!--<ScrollViewer>-->
                <Frame x:Name="ContentFrame" 
                       IsTabStop="True"
                       NavigationFailed="ContentFrame_NavigationFailed"/>
            <!--</ScrollViewer>-->
        </muxc:NavigationView>
        <ProgressRing Name="MyProgressRing" Height="50" Width="50"></ProgressRing>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                        MinWindowWidth="{x:Bind NavView.CompactModeThresholdWidth}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Leave the next line for left-only navigation. -->
                        <!--<Setter Target="ContentFrame.Padding" 
                                Value="12,0,12,12"/>-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</Page>
