<Page
    x:Class="Bangumi.Views.TimeLinePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bangumi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Bangumi.Api.Models"
    xmlns:wuxdata="using:Windows.UI.Xaml.Data"
    xmlns:common="using:Bangumi.Common"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <CollectionViewSource x:Name="cvsGroups" Source="{x:Bind ViewModel.BangumiCollection}" IsSourceGrouped="True" ItemsPath="Items"/>

            <DataTemplate x:Key="NarrowZoomedInTemplate" x:DataType="data:Subject">
                <RelativePanel Padding="5">
                    <controls:ImageEx Name="BangumiImage"
                                      IsCacheEnabled="True"
                                      CacheMode="BitmapCache"
                                      Source="{x:Bind Images.Common}"
                                      PlaceholderSource="ms-appx:///Assets/resource/err_404.png"
                                      PlaceholderStretch="UniformToFill"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignTopWithPanel="True"
                                      x:Phase="2"
                                      Height="75"
                                      Width="75"
                                      Margin="0,0,6,0"
                                      Stretch="UniformToFill" />
                    <TextBlock Name="TitleTextBlock" Text="{x:Bind NameCn}"
                               RelativePanel.RightOf="BangumiImage"
                               RelativePanel.AlignTopWithPanel="True"
                               FontSize="14"
                               Foreground="{StaticResource BangumiPinkColor}"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{x:Bind Name}"
                               RelativePanel.RightOf="BangumiImage"
                               RelativePanel.Below="TitleTextBlock"
                               x:Phase="1"
                               FontSize="12"
                               Foreground="Gray"
                               TextTrimming="CharacterEllipsis"/>
                </RelativePanel>
            </DataTemplate>

            <DataTemplate x:Key="WideZoomedInTemplate" x:DataType="data:Subject">
                <RelativePanel Padding="5">
                    <controls:ImageEx Name="BangumiImage"
                                      IsCacheEnabled="True"
                                      CacheMode="BitmapCache"
                                      Source="{x:Bind Images.Common}"
                                      PlaceholderSource="ms-appx:///Assets/resource/err_404.png"
                                      PlaceholderStretch="UniformToFill"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignTopWithPanel="True"
                                      x:Phase="2"
                                      Height="134"
                                      Width="100"
                                      Margin="0,0,12,0"
                                      Stretch="UniformToFill" />
                    <TextBlock Name="TitleTextBlock" Text="{x:Bind NameCn}"
                               RelativePanel.RightOf="BangumiImage"
                               RelativePanel.AlignTopWithPanel="True"
                               FontSize="20"
                               Foreground="{StaticResource BangumiPinkColor}"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{x:Bind Name}"
                               RelativePanel.RightOf="BangumiImage"
                               RelativePanel.Below="TitleTextBlock"
                               x:Phase="1"
                               FontSize="16"
                               Foreground="Gray"
                               TextTrimming="CharacterEllipsis"/>
                </RelativePanel>
            </DataTemplate>

            <DataTemplate x:Key="ZoomedInGroupHeaderTemplate"  x:DataType="data:BangumiTimeLine">
                <TextBlock Text="{x:Bind Weekday.Chinese}"
                           Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>
            </DataTemplate>

            <DataTemplate x:Key="ZoomedOutTemplate"  x:DataType="wuxdata:ICollectionViewGroup">
                <TextBlock Text="{x:Bind ((data:BangumiTimeLine)Group).Weekday.Chinese}"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           TextWrapping="Wrap" />
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyGridView.ItemTemplate"
                                Value="{StaticResource NarrowZoomedInTemplate}"/>
                        <Setter Target="MyGridView.DesiredWidth"
                                Value="300"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="400" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyGridView.ItemTemplate"
                                Value="{StaticResource WideZoomedInTemplate}"/>
                        <Setter Target="MyGridView.DesiredWidth"
                                Value="370"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <SemanticZoom Name="TimeLineSemanticZoom"
                      Grid.Row="1">
            <SemanticZoom.ZoomedInView>
                <controls:AdaptiveGridView Name="MyGridView"
                                           ItemsSource="{x:Bind cvsGroups.View}"
                                           Padding="12,0,12,40"
                                           ScrollViewer.IsHorizontalScrollChainingEnabled="False"
                                           IsItemClickEnabled="True"
                                           ItemClick="GridView_ItemClick">
                    <GridView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource ZoomedInGroupHeaderTemplate}"/>
                    </GridView.GroupStyle>
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition IsStaggeringEnabled="False" />
                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>
                </controls:AdaptiveGridView>
            </SemanticZoom.ZoomedInView>

            <SemanticZoom.ZoomedOutView>
                <ListView ItemsSource="{x:Bind cvsGroups.View.CollectionGroups}"
                          Padding="12,0,12,40"
                          SelectionMode="None"
                          ScrollViewer.IsHorizontalScrollChainingEnabled="False"
                          ItemTemplate="{StaticResource ZoomedOutTemplate}">
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
    </Grid>
</Page>
