<Page
    x:Class="Bangumi.Views.ProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bangumi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Bangumi.ViewModels"
    xmlns:common="using:Bangumi.Common"
    NavigationCacheMode="Enabled"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <DataTemplate x:Key="ProgressSubjectTemplate" x:DataType="data:WatchingStatus">
            <RelativePanel Padding="5"
                           Width="{Binding ElementName=MyWidth,Path=Width}">
                <Image Name="BangumiImage"
                       Source="{x:Bind image}" 
                       x:Phase="2"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True"
                       Height="75" 
                       Width="75" 
                       Margin="0,0,5,0"
                       Stretch="UniformToFill" />
                <TextBlock Name="TitleTextBlock"
                           Text="{x:Bind name_cn}" 
                           FontSize="14" 
                           RelativePanel.RightOf="BangumiImage"
                           RelativePanel.AlignTopWithPanel="True"
                           Foreground="#d26585"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock Name="SubTitleTextBlock"
                           Text="{x:Bind name}" 
                           x:Phase="1"
                           RelativePanel.RightOf="BangumiImage"
                           RelativePanel.Below="TitleTextBlock"
                           FontSize="12" 
                           Foreground="Gray"
                           TextTrimming="CharacterEllipsis"/>
                <TextBlock FontSize="12" 
                           x:Phase="1"
                           RelativePanel.RightOf="BangumiImage"
                           RelativePanel.Below="SubTitleTextBlock"
                           Foreground="{x:Bind ep_color, Mode=OneWay}"
                           TextTrimming="CharacterEllipsis">
                        <Run Text="{x:Bind watched_eps, Mode=OneWay}"/>
                        <Run Text="/"/>
                        <Run Text="{x:Bind eps_count, Mode=OneWay}"/>
                </TextBlock>

                <Button Click="CollectionButton_Click"
                        Padding="8,1"
                        RelativePanel.RightOf="BangumiImage"
                        RelativePanel.AlignBottomWithPanel="True"
                        BorderThickness="1"
                        Background="{ThemeResource AppBarItemBackgroundThemeBrush}">
                    <FontIcon FontFamily="Segoe MDL2 Assets" 
                              Glyph="&#xE00B;" 
                              Foreground="{x:Bind ep_color, Mode=OneWay}"
                              Margin="0">
                        <FontIcon.RenderTransform>
                            <CompositeTransform CenterX="10"
                                                CenterY="10"
                                                ScaleX="0.6" 
                                                ScaleY="0.6"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </Button>

                <Button Click="NextEpButton_Click"
                        Padding="8,3"
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignBottomWithPanel="True"
                        BorderThickness="1"
                        Background="{ThemeResource AppBarItemBackgroundThemeBrush}">
                    <TextBlock FontSize="12" 
                               Foreground="{x:Bind ep_color, Mode=OneWay}"
                               VerticalAlignment="Center">
                                <Run Text="EP."/>
                                <Run Text="{x:Bind next_ep, Mode=OneWay}"/>
                    </TextBlock>
                </Button>
                
                <ProgressRing IsActive="True"
                              Visibility="{x:Bind isUpdating,Mode=OneWay}"
                              RelativePanel.AlignRightWithPanel="True"
                              RelativePanel.AlignTopWithPanel="True"
                              Width="20" 
                              Height="20" >
                    <ProgressRing.RenderTransform>
                        <CompositeTransform CenterX="10"
                                            CenterY="10"
                                            ScaleX="0.6" 
                                            ScaleY="0.6"/>
                    </ProgressRing.RenderTransform>
                </ProgressRing>

            </RelativePanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <GridView Name="MyGridView" 
                  Padding="12,6,12,46"
                  ItemsSource="{x:Bind ViewModel.WatchingCollection}" 
                  IsItemClickEnabled="True" 
                  ItemClick="GridView_ItemClick"
                  ItemTemplate="{StaticResource ProgressSubjectTemplate}">
            <GridView.ItemContainerTransitions>
                <TransitionCollection>
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                    <EntranceThemeTransition IsStaggeringEnabled="True" />
                    <AddDeleteThemeTransition />
                    <ContentThemeTransition />
                </TransitionCollection>
            </GridView.ItemContainerTransitions>
        </GridView>

        <Border Name="MyWidth"
                Visibility="Collapsed"/>

    </Grid>
</Page>
