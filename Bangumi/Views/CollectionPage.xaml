<Page
    x:Class="Bangumi.Views.CollectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bangumi.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Bangumi.Models"
    xmlns:common="using:Bangumi.Common"
    xmlns:wuxdata="using:Windows.UI.Xaml.Data"
    SizeChanged="Page_SizeChanged"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d"
    Background="Transparent">
    <Page.Resources>
        <CollectionViewSource x:Name="cvsGroups" Source="{x:Bind ViewModel.subjectCollection}" IsSourceGrouped="True" ItemsPath="list"/>

        <DataTemplate x:Key="ZoomedInTemplate" x:DataType="data:SList">
            <Grid Width="{Binding ElementName=MyWidth,Path=Width}"
                  Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{x:Bind subject.images.common}" 
                       Height="75" 
                       Width="75" 
                       Stretch="UniformToFill" />
                <Grid Grid.Column="1"
                      Padding="6,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{x:Bind subject.name_cn}" 
                               FontSize="14" 
                               Foreground="#d26585"
                               TextWrapping="Wrap" />
                    <TextBlock Grid.Row="1"
                               Text="{x:Bind subject.name}" 
                               FontSize="12"
                               Foreground="Gray"
                               TextTrimming="WordEllipsis"/>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ZoomedInGroupHeaderTemplate" x:DataType="data:Collect">
            <TextBlock Text="{x:Bind status.name}" 
                       Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="ZoomedOutTemplate" x:DataType="wuxdata:ICollectionViewGroup">
            <TextBlock Text="{x:Bind ((data:Collect)Group).status.name}" 
                       Style="{StaticResource SubtitleTextBlockStyle}" 
                       TextWrapping="Wrap" />
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" 
                    Height="20"
                    Margin="10,0">
            <TextBlock Text="{x:Bind ViewModel.Message, Mode=OneWay}"/>
            <ProgressRing Name="MyProgressRing" 
                          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          IsActive="True"
                          HorizontalAlignment="Left" 
                          Height="20" 
                          Width="20" 
                          VerticalAlignment="Top" 
                          RenderTransformOrigin="0.5,0.5" >
                <ProgressRing.RenderTransform>
                    <CompositeTransform ScaleX="0.5" 
                                        ScaleY="0.5"/>
                </ProgressRing.RenderTransform>
            </ProgressRing>
            <TextBlock Name="ClickToRefresh" 
                       Visibility="{x:Bind common:Converters.CollapsedIf(ViewModel.IsLoading), Mode=OneWay}"
                       VerticalAlignment="Center" 
                       Padding="5,0" >
                <Hyperlink UnderlineStyle="None" 
                           FontFamily="Segoe MDL2 Assets" 
                           Click="Hyperlink_Click" >
                    &#xE72C;
                </Hyperlink>
            </TextBlock>
        </StackPanel>
        <ComboBox Name="TypeCombobox" 
                  HorizontalAlignment="Right"
                  SelectedIndex="0"
                  SelectionChanged="TypeCombobox_SelectionChanged"
                  Margin="10,0">
            <ComboBoxItem Content="动画" />
            <ComboBoxItem Content="书籍" />
            <ComboBoxItem Content="音乐" />
            <ComboBoxItem Content="游戏" />
            <ComboBoxItem Content="三次元" />
        </ComboBox>

        <Border Name="MyWidth"
                    Visibility="Collapsed"/>

        <SemanticZoom Name="CollectionSemanticZoom" 
                      Grid.Row="1">
            <SemanticZoom.ZoomedInView>
                <GridView ItemsSource="{x:Bind cvsGroups.View}" 
                          Padding="12,0,12,40"
                          ScrollViewer.IsHorizontalScrollChainingEnabled="False"
                          IsItemClickEnabled="True" 
                          ItemClick="GridView_ItemClick"
                          ItemTemplate="{StaticResource ZoomedInTemplate}">
                    <GridView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource ZoomedInGroupHeaderTemplate}"/>
                    </GridView.GroupStyle>
                </GridView>
            </SemanticZoom.ZoomedInView>

            <SemanticZoom.ZoomedOutView>
                <ListView ItemsSource="{x:Bind cvsGroups.View.CollectionGroups}"
                          Padding="12,0,12,40"
                          SelectionMode="None"
                          ScrollViewer.IsHorizontalScrollChainingEnabled="False"
                          ItemTemplate="{StaticResource ZoomedOutTemplate}">
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>

    </Grid>
</Page>
